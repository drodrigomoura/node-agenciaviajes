extends ./layout/index

block contenido
  main.container.mt-5
    .row
      .col-md-5
        img(src=`/img/destinos_${resultado.imagen}_ln.jpg`, alt=`${resultado.imagen}`, class="img-fluid")
      .col-md-7
        h1 #{resultado.titulo}

        p
          svg.icon.icon-tabler.icon-tabler-calendar-event(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
            path(stroke='none' d='M0 0h24v24H0z' fill='none')
            rect(x='4' y='5' width='16' height='16' rx='2')
            line(x1='16' y1='3' x2='16' y2='7')
            line(x1='8' y1='3' x2='8' y2='7')
            line(x1='4' y1='11' x2='20' y2='11')
            rect(x='8' y='15' width='2' height='2')
          | #{resultado.fecha_ida } - #{resultado.fecha_vuelta}

        p
          svg.icon.icon-tabler.icon-tabler-currency-bitcoin(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
            path(stroke='none' d='M0 0h24v24H0z' fill='none')
            path(d='M6 6h8a3 3 0 0 1 0 6a3 3 0 0 1 0 6h-8')
            line(x1='8' y1='6' x2='8' y2='18')
            line(x1='8' y1='12' x2='14' y2='12')
            line(x1='9' y1='3' x2='9' y2='6')
            line(x1='13' y1='3' x2='13' y2='6')
            line(x1='9' y1='18' x2='9' y2='21')
            line(x1='13' y1='18' x2='13' y2='21')
          
          | #{resultado.precio}

        p
          svg.icon.icon-tabler.icon-tabler-user(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
            path(stroke='none' d='M0 0h24v24H0z' fill='none')
            circle(cx='12' cy='7' r='4')
            path(d='M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')
          | #{resultado.disponibles} Disponibles

        p= resultado.descripcion

